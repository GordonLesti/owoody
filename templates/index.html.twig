{% extends 'base.html.twig' %}

{% block navigation_title %}Dashboard{% endblock %}

{% block main %}
{% if route_count > 0 %}
<dl class="grid grid-cols-1 gap-5 sm:grid-cols-3">
    <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow-sm sm:p-6 dark:bg-gray-800/75 dark:inset-ring dark:inset-ring-white/10">
      <dt class="truncate text-sm font-medium text-gray-500 dark:text-gray-400">Number of routes</dt>
      <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900 dark:text-white">{{ route_count }}</dd>
    </div>
    <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow-sm sm:p-6 dark:bg-gray-800/75 dark:inset-ring dark:inset-ring-white/10">
      <dt class="truncate text-sm font-medium text-gray-500 dark:text-gray-400">Easist route</dt>
      <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900 dark:text-white">{{ easiest.value }}</dd>
    </div>
    <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow-sm sm:p-6 dark:bg-gray-800/75 dark:inset-ring dark:inset-ring-white/10">
      <dt class="truncate text-sm font-medium text-gray-500 dark:text-gray-400">Hardest route</dt>
      <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900 dark:text-white">{{ hardest.value }}</dd>
    </div>
</dl>
{% endif %}
{% endblock %}