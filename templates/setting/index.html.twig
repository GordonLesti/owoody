{% extends 'base.html.twig' %}

{% block navigation_title %}Settings{% endblock %}

{% block navigation_buttons %}
<button @click="document.getElementById('setting_form').submit()" type="button" class="relative rounded-full p-1 text-fuchsia-200 hover:text-white focus:outline-2 focus:outline-offset-2 focus:outline-white">
    <span class="absolute -inset-1.5"></span>
    <span class="sr-only">Save Settings</span>
    <svg fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3" />
    </svg>
</button>
{% endblock %}

{% block main %}
<div class="mx-auto max-w-2xl">
    {{ form_start(form, {method: 'POST', action: path('setting'), attr: {id: 'setting_form'}}) }}
    {{ form_end(form) }}
</div>
{% endblock %}