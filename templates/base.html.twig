<!DOCTYPE html>
<html class="h-full bg-gray-100 dark:bg-gray-900">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="theme-color" content="#00bc7d">
        <link rel="icon" href="data:image/png;base64,iVBORw0KGgo=">
        <title>{% block title %}owoody{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="h-full">
        <div class="min-h-full">
            {% set route = app.request.attributes.get('_route') %}
            {% set navigation_entries = [{'route': 'index', 'label': 'Dashboard', 'userRequired': false}, {'route': 'route', 'label': 'Routes', 'userRequired': false}, {'route': 'log', 'label': 'Logs', 'userRequired': true}, {'route': 'setting' ,'label': 'Settings', 'userRequired': true}] %}
            <nav class="bg-fuchsia-600 dark:bg-fuchsia-800" x-data="{ open: false }">
                <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                    <div class="relative flex h-16 items-center justify-between">
                        <div class="absolute inset-y-0 left-0 flex items-center md:hidden">
                            {% block navigation_button %}
                                <button type="button" command="--toggle" commandfor="mobile-menu" class="relative inline-flex items-center justify-center rounded-md bg-fuchsia-600 p-2 text-fuchsia-200 hover:bg-fuchsia-500/75 hover:text-white focus:outline-2 focus:outline-offset-2 focus:outline-white dark:bg-fuchsia-800 dark:hover:bg-fuchsia-700/75">
                                    <span class="absolute -inset-0.5"></span>
                                    <span class="sr-only">Open main menu</span>
                                    <svg x-description="Icon when menu is closed." x-state:on="Menu open" x-state:off="Menu closed" class="size-6 block" :class="{ 'hidden': open, 'block': !(open) }" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-6 in-aria-expanded:hidden">
                                        <path d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" stroke-linecap="round" stroke-linejoin="round" />
                                    </svg>
                                    <svg x-description="Icon when menu is open." x-state:on="Menu open" x-state:off="Menu closed" class="size-6 hidden" :class="{ 'block': open, 'hidden': !(open) }" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-6 not-in-aria-expanded:hidden">
                                        <path d="M6 18 18 6M6 6l12 12" stroke-linecap="round" stroke-linejoin="round" />
                                    </svg>
                                </button>
                            {% endblock %}
                        </div>
                        <div class="flex flex-1 items-center justify-center md:items-stretch md:justify-start">
                            <div class="hidden md:block">
                                <div class="flex items-baseline space-x-4">
                                    {% for entry in navigation_entries %}
                                        {% if entry.userRequired == false or app.user %}
                                            {% if route starts with entry.route %}
                                                <a href="{{ path(entry.route) }}" aria-current="page" class="rounded-md bg-fuchsia-700 px-3 py-2 text-sm font-medium text-white dark:bg-fuchsia-950/40">{{ entry.label }}</a>
                                            {% else %}
                                                <a href="{{ path(entry.route) }}" class="rounded-md px-3 py-2 text-sm font-medium text-white hover:bg-fuchsia-500/75 dark:hover:bg-fuchsia-700/75">{{ entry.label }}</a>
                                            {% endif %}
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        <div class="absolute inset-y-0 right-0 flex items-center pr-2 gap-x-4 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
                            {% block navigation_buttons %}
                                {% if app.user %}
                                    <el-dropdown class="relative ml-3 hidden md:block">
                                        <button class="relative flex max-w-xs items-center rounded-full focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white">
                                            <span class="absolute -inset-1.5"></span>
                                            <span class="sr-only">Open user menu</span>
                                            <span class="inline-flex size-8 items-center justify-center rounded-full bg-gray-500 outline -outline-offset-1 outline-black/5 dark:bg-gray-800 dark:outline-white/10">
                                                <span class="text-sm font-medium text-white uppercase">{{ app.user.userIdentifier|slice(0, 1) }}</span>
                                            </span>
                                        </button>

                                        <el-menu anchor="bottom end" popover class="w-48 origin-top-right rounded-md bg-white py-1 shadow-lg outline-1 outline-black/5 transition transition-discrete [--anchor-gap:--spacing(2)] data-closed:scale-95 data-closed:transform data-closed:opacity-0 data-enter:duration-100 data-enter:ease-out data-leave:duration-75 data-leave:ease-in dark:bg-gray-800 dark:shadow-none dark:-outline-offset-1 dark:outline-white/10">
                                            <a href="{{ path('app_logout') }}" class="block px-4 py-2 text-sm text-gray-700 focus:bg-gray-100 focus:outline-hidden dark:text-gray-200 dark:focus:bg-white/5">Sign out</a>
                                        </el-menu>
                                    </el-dropdown>
                                {% else %}
                                    <button type="button" @click="location.href='{{ path('app_login') }}'" class="hidden relative md:inline-flex items-center justify-center rounded-md bg-fuchsia-600 p-2 text-fuchsia-200 hover:bg-fuchsia-500/75 hover:text-white focus:outline-2 focus:outline-offset-2 focus:outline-white dark:bg-fuchsia-800 dark:hover:bg-fuchsia-700/75">
                                        <span class="absolute -inset-0.5"></span>
                                        <span class="sr-only">Login</span>
                                        <svg fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                                        </svg>
                                    </button>
                                {% endif %}
                            {% endblock %}
                        </div>
                    </div>
                </div>
                <el-disclosure id="mobile-menu" hidden class="block md:hidden">
                    <div class="space-y-1 px-2 pt-2 pb-3 sm:px-3">
                        {% for entry in navigation_entries %}
                            {% if entry.userRequired == false or app.user %}
                                {% if route starts with entry.route %}
                                    <a href="{{ path(entry.route) }}" aria-current="page" class="block rounded-md bg-fuchsia-700 px-3 py-2 text-base font-medium text-white dark:bg-fuchsia-950/40">{{ entry.label }}</a>
                                {% else %}
                                    <a href="{{ path(entry.route) }}" class="block rounded-md px-3 py-2 text-base font-medium text-white hover:bg-fuchsia-500/75 dark:hover:bg-fuchsia-700/75">{{ entry.label }}</a>
                                {% endif %}
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="border-t border-fuchsia-700 pt-4 pb-3 dark:border-fuchsia-800">
                        {% if app.user %}
                            <div class="flex items-center px-5">
                                <div class="shrink-0">
                                    <span class="inline-flex size-8 items-center justify-center rounded-full bg-gray-500 outline -outline-offset-1 outline-black/5 dark:bg-gray-800 dark:outline-white/10">
                                        <span class="text-sm font-medium text-white uppercase">{{ app.user.userIdentifier|slice(0, 1) }}</span>
                                    </span>
                                </div>
                                <div class="ml-3">
                                    <div class="text-base font-medium text-white">{{ app.user.userIdentifier }}</div>
                                </div>
                            </div>
                            <div class="mt-3 space-y-1 px-2">
                                <a href="{{ path('app_logout') }}" class="block rounded-md px-3 py-2 text-base font-medium text-white hover:bg-fuchsia-500/75 dark:hover:bg-fuchsia-700/75">Sign out</a>
                            </div>
                        {% else %}
                            <div class="space-y-1 px-2">
                                <a href="{{ path('app_login') }}" class="block rounded-md px-3 py-2 text-base font-medium text-white hover:bg-fuchsia-500/75 dark:hover:bg-fuchsia-700/75">Login</a>
                            </div>
                        {% endif %}
                    </div>
                </el-disclosure>
            </nav>

            <header class="relative bg-white shadow-sm dark:bg-gray-800 dark:shadow-none dark:after:pointer-events-none dark:after:absolute dark:after:inset-x-0 dark:after:bottom-0 dark:after:h-px dark:after:bg-white/10">
                <div class="mx-auto max-w-7xl px-4 py-4 sm:px-6 lg:px-8">
                <h1 class="text-lg/6 font-semibold text-gray-900 dark:text-white">{% block navigation_title %}{% endblock %}</h1>
                </div>
            </header>
            <main>
                <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
                    {% block main %}{% endblock %}
                </div>
                {% include 'component/flash.html.twig' %}
            </main>
        </div>
    </body>
</html>
